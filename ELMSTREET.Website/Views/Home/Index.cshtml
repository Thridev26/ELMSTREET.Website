@{
    ViewBag.Title = "ELMSTREET Clothing";
}

<!-- Hero Section -->
<div style="
    position: relative;
    height: 70vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url('https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
    background-size: cover;
">
    
    <div style=" 
    background-color: rgba(0, 0, 0, 0.85); 
    padding: 30px 50px; 
    border-radius: 10px; 
    box-shadow: 0 4px 20px rgba(0,0,0,0.7); 
    max-width: 600px; 
    text-align: center; ">
        <h1 class="hero-title" style="
    font-family: 'Anton', Helvetica, Arial, sans-serif;
    font-weight: 400;      /* Anton is naturally bold, 400 is fine */
    font-size: 4.5rem;     /* Bigger for impact */
    color: white;
    margin: 0;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 2px 2px 5px rgba(0,0,0,0.85);
    -webkit-text-stroke: 1px black;
">
            ELMSTREET CLOTHING
        </h1>
    </div>
    <div class="scroll-down">&#8595;</div>
</div>

<div style="margin-bottom: 100px;"></div>

<!-- About Section -->
<div class="container mb-5" id="about">
    <div class="row justify-content-center text-center">
        <div class="container" style="margin-left: 200px;">
            <div class="col-lg-8">
                <h2 class="mb-3">About Us</h2>
                <p class="lead">
                    ELMSTREET Clothing is a bold and expressive streetwear startup that blends urban energy with timeless design.
                    Built for those who live on their own terms, our brand is more than just fashion — it's a movement.
                </p>
                <!-- Displaying your favicon image/logo -->
                <img src="~/favicon.ico" class="img-fluid rounded shadow mt-4" alt="ELMSTREET Icon" style="max-width: 120px;" />
            </div>
        </div>
    </div>
</div>

<div style="margin-bottom: 100px;"></div>

<!-- Products Section -->
<div class="bg-light py-5" id="products">
    <div class="container text-center">
        <h2 class="mb-4">Featured Drops</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://via.placeholder.com/300x200?text=Hoodie+Drop" class="card-img-top" alt="Hoodie">
                    <div class="card-body">
                        <h5 class="card-title">Need Money for Porsche Shirt</h5>
                        <p class="card-text">Attract all the ladies with this Need Money for Porsche Shirt.</p>
                        <a href="#" class="btn btn-dark">View Item</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://via.placeholder.com/300x200?text=Graphic+Tee" class="card-img-top" alt="Graphic Tee">
                    <div class="card-body">
                        <h5 class="card-title">I love Hot Moms Shirt</h5>
                        <p class="card-text">Warn eveyone to hide their Moms.</p>
                        <a href="#" class="btn btn-dark">View Item</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://via.placeholder.com/300x200?text=Cargo+Pants" class="card-img-top" alt="Cargos">
                    <div class="card-body">
                        <h5 class="elmstreetexotics.za"></h5>
                        <p class="card-text">Book MD Car through ELMSTREETexotics.za .</p>
                        <a href="#" class="btn btn-dark">View Item</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="margin-bottom: 100px;"></div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-4 mt-5">
    <div class="container">
        <p class="mb-1">&copy; 2025 ELMSTREET Clothing. All rights reserved.</p>
        <p class="mb-0">
            <a href="#" class="text-white me-3">Instagram</a> |
            <a href="#" class="text-white ms-3">Contact</a>
        </p>
    </div>
</footer>



